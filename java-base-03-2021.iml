package lesson2;

public class HomeworkLes2 {
    public static void main(String[] args) {
        System.out.println("Задача 1:");
        changeArray();
        System.out.println("\n\nЗадача 2:");
        createArray();
        System.out.println("\n\nЗадача3:");
        changeArr();
        System.out.println("\n\nЗадача4:");
        changeA();
    }

    static void changeArray() {
        int[] arr = new int[]{1, 1, 0, 0, 1, 0, 1, 1, 0, 0,};
        System.out.print("");
        for (int i = 0; i < arr.length; i++) {
            System.out.print(arr[i] + " ");
            if (arr[i] == 0) arr[i] = 1;
            else arr[i] = 0;
        }

        System.out.print("\n");
        for (int i : arr) {
            System.out.print(i + " ");
        }

    }

    static void createArray() {
        int[] arr = new int[8];
        for (int i = 0, j = 0; i < arr.length; i++, j += 3) {
            arr[i] = j;
            System.out.print(arr[i] + " ");
        }
    }

    static void changeArr() {
        int[] arr = new int[]{1, 5, 3, 2, 11, 4, 5, 2, 4, 8, 9, 1};
        System.out.print("");
        for (int i : arr) {
            System.out.print(i + " ");
        }
        System.out.print("\n");
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] < 6) arr[i] *= 2;
            System.out.print(arr[i] + " ");
        }

    }

    static void changeA() {
        int length = 8;
        int[][] arr = new int[length][length];
        for (int i = 0; i < length; i++) {
            for (int j = 0; j < length; j++) {
                if ((i == j) || (i == length - 1 - j)) {
                    arr[i][j] = 1;
                }
            }
        }
        for (int i = 0; i < length; i++) {
            for (int j = 0; j < length; j++) {
                System.out.print(arr[i][j] + " ");
            }
            System.out.println();
        }

    }
}
